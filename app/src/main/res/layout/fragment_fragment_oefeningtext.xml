             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".oefeningdetails.FragmentOefeningText">

    <TextView
            android:id="@+id/oefeningText_beschrijving"
            android:text="@string/loremIpsum"
            android:layout_width="match_parent"
